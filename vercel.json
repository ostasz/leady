{
    "framework": "nextjs",
    "buildCommand": "next build",
    "installCommand": "npm install",
    "outputDirectory": ".next",
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                }
            ]
        }
    ],
    "crons": [
        {
            "path": "/api/cron/import-email",
            "schedule": "0 7 * * *",
            "headers": {
                "authorization": "Bearer CRON_SECRET"
            }
        }
    ]
}